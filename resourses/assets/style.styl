@keyframes changingWhite
    0%
        color rgba(255,255,255,0)
    50%
        color rgba(255,255,255,0)
    60%
        color rgba(255,255,255,1)
    100%
    	color rgba(255,255,255,1)
@keyframes changingGreen
    0%
        background rgba(33,186,69,0)
    50%
    	background rgba(33,186,69,1)
    100%
    	background rgba(33,186,69,0)
@keyframes changingRed
    0%
        background rgba(219,40,40,0)
    50%
        background rgba(219,40,40,1)
    100%
        background rgba(219,40,40,0)
@keyframes changingYellow
    0%
        background rgba(181,204,24,0)
    50%
        background rgba(181,204,24,1)
    100%
        background rgba(181,204,24,0)

