.pushable
    height:auto;
.crm
    &.menu
    &.card
        height: 100%;
        display:none
        transition: all .2s ease-in;
        .content
            height: 100%;
        .grid
            height: 100%;
        &.active
            display: block;
        .clearing
            margin-bottom:.5em;
            input,h5
                margin-left: 1em;
    .left-column,.right-column
        max-height:100%;
        overflow:auto;
