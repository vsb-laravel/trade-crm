.pushable
    height:auto;
.crm
    &.menu
    &.card
        height: 100%;
        display:none
        transition: all .2s ease-in;
        .content
            height: 100%;
        .grid
            height: 100%;
        &.active
            display: block;
        .clearing
            margin-bottom:.5em;
            input,h5
                margin-left: 1em;
    .left-column,.right-column
        max-height:100%;
        overflow:auto;
.ui.menu > .online.item
    border: solid 1px #21ba45!important;
    color: #21ba45!important;
#cards_container
    right: -10px!important;
    width:94vw;
    z-index:99;
    top: 4.5em;
    >.segment
        height:calc(100% - 60px);
#cards_container_content
    height:calc(100% - 50px);
#cards_container_menu
    overflow-y: auto;
#cards_container_menu::-webkit-scrollbar,#cards_container_content .left-column::-webkit-scrollbar,#cards_container_content .right-column::-webkit-scrollbar
    height:11px;
    width: 0px;
#cards_container_menu::-webkit-scrollbar-track
    -webkit-box-shadow: none;
#cards_container_menu::-webkit-scrollbar-thumb,#cards_container_content .left-column::-webkit-scrollbar-thumb,#cards_container_content .right-column::-webkit-scrollbar-thumb
    border-radius: 2px;
    height:12px;
    width:12px;
    -webkit-box-shadow: inset 0 0 2px rgba(0,0,0,0.2);
#cards_container_toggler
    position:fixed;
    top:50px;
    right:0;
    z-index:10;
    display:none;
    font-size:15px;
    transition: all .1s ease-in-out;
